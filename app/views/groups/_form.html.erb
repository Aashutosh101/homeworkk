<%= simple_form_for(@group) do |f| %>
  <%= f.error_notification %>

<% current_user.class_number.to_i.times do %>
	<%= f.text_field :name, name: "group[][name]" %>

	<%= f.time_field :end_time, name: "group[][end_time]"%>
	
	<%= f.text_field :group_day, :hidden => true, :value => @sign_up_day, name: "group[][group_day]" %>
	<br>
<% end %>
	
  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
