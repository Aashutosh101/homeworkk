		<div class="row header">
      <div class="cell">
        Class Name
      </div>
      <div class="cell">
        End Time
      </div>
      <div class="cell">
        Homework
      </div>
    </div>
	    <% current_user.groups.where("group_day = ?", "monday").order("end_time ASC").each do |group| %>
	    	<% if counter > current_user.class_number.to_i %>
	    		<% group.update(extra_class: true) %>
	    		<% else %>
	    		<% group.update(extra_class: false) %>
	    	<% end %>
