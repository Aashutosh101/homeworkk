<% if !user_signed_in? %>
	<%= render 'pages/home' %>
<% elsif current_user.class_number.nil? %>
	<%= render 'pages/user_class_number' %>
<% else %>

	<h1>Listing Classes</h1>

	    <% current_user.groups.order('CASE Day WHEN "Monday" THEN 1 WHEN "Tuesday" THEN 2 WHEN "Wednesday" THEN 3 WHEN "Thursday" THEN 4 WHEN "Friday" THEN 5 END').each do |group| %>
		      <%= group.group_name %> - <%= group.end_time %> - <%= 'assigned: ' + group.homework_assigned.to_s %> - <%= group.group_day %>
	        <%= link_to 'Show', group %>
	        <%= link_to 'Edit', edit_group_path(group) %>
	        <%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' } %>
	        <br>
	    <% end %>

	    <br>

	<%= link_to 'New Class Day', new_group_path %>

<% end %>

