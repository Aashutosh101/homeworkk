<%= $staging = true if request.original_url == "https://staging-christopherbot.herokuapp.com/" %>
<%= $staging.inspect %>
<% if !user_signed_in? %>
	<%= render 'pages/home' %>
<% elsif current_user.class_number.nil? || current_user.class_number.to_s == "" || current_user.time_zone.nil? || current_user.time_zone.to_s == "" %>
